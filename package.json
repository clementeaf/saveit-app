{
  "name": "@saveit/root",
  "version": "1.0.0",
  "private": true,
  "description": "SaveIt App - Multi-channel Restaurant Reservation System",
  "workspaces": [
    "backend/services/*",
    "backend/shared/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.8.2",
  "scripts": {
    "dev": "cd backend && npm run dev",
    "build": "cd backend && npm run build",
    "test": "cd backend && npm run test",
    "lint": "cd backend && npm run lint",
    "typecheck": "cd backend && npm run typecheck",
    "format": "cd backend && npm run format",
    "docker:up": "cd backend && npm run docker:up",
    "docker:down": "cd backend && npm run docker:down",
    "docker:logs": "cd backend && npm run docker:logs",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed"
  }
}
