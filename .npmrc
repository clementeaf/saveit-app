# NPM Configuration for SaveIt App
# This ensures clean dependency resolution without workarounds

# Use exact versions when saving dependencies
save-exact=true

# Audit level for security checks
audit-level=moderate

# Engine strict mode - fail if Node/npm versions don't match
engine-strict=true

# Registry
registry=https://registry.npmjs.org

# Legacy peer deps disabled - we handle compatibility properly
legacy-peer-deps=false
